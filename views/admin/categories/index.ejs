<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>

<div class="container">

	<hr>
	<h2> Categorias</h2>
	<a class="btn btn-sucess" href="/admin/categories/new">Criar categorias</a>
	<hr>

	<table class="table table-bordered">
		<thead>
			<tr>
				<th>ID</th>
				<th>TÍTULO</th>
				<th>SLUG</th>
				<th>AÇÕES</th>
			</tr>
		</thead>
		<tbody>
			<% categories.forEach(category => { &>
				<tr>
				<th><%=category.id%></th>
				<th><%=category.title%></th>
				<th><&=category.slug%></th>
				<th>
					<a href="/admin/categories/edit/ <%= category.id %>" class="btn btn-warning">EDITAR</a>
					
					<form method="POST" action="/categories/delete" style="display: inline" onsubmit="confirmarDelecao(event, this)">
						<input type="hidden" name="id" value="<%= category.id %>">
						<button class="btn btn-danger">DELETAR</button>

					</form>
					
				</th>
			</tr>
			<% }) %>
		</tbody>
	</table>
</div>
<%- include ('../../partials/footer.ejs') %>

<script>
	function confirmarDelecao(event, form){
		event.preventDefault();
		var decision = confirm("Deseja deletar a categoria?");
		if(decision){
			form.submit();
		}
	}
</script>